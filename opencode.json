{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "allow",
    "read": "allow",
    "edit": "allow",
    "write": "allow",
    "bash": {
      "*": "allow",
      "git *": "allow",
      "npm *": "allow",
      "npx *": "allow"
    },
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "external_directory": "allow"
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": true
    }
  }
}
